    "Set a breakpoint": {
        "prefix": "ipdb",
        "body": [
            "import ipdb; ipdb.set_trace()  # BREAKPONT $1"
        ],
        "description": "Set a breakpoint"
    },
    "Nose Focus": {
        "prefix": "focus",
        "body": [
            "from nose_focus import focus",
            "@focus"
        ],
        "description": "Focus a test case"
    }
}
